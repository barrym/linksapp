.control-group{:class => (error_on(@user, :email) ? 'error' :'')}
  = label_tag :email, nil, :class => 'control-label'
  .controls
    = text_field_tag :email, @user.email, :autofocus => true
    - if error_on(@user, :email)
      %span.help-inline
        = errors_for(@user, :email)
