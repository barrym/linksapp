        = errors_for(@user, :password)
.control-group{:class => (error_on(@user, :avatar) ? 'error' :'')}
  = label_tag :avatar, nil, :class => 'control-label'
  .controls
    - if @user.avatar?
      %p
        = image_tag @user.avatar.url(:large)
    = file_field_tag :avatar
    = text_field_tag :avatar_url, nil, :placeholder => 'Paste your URL here', :id => 'avatar_url', :style => 'display:none;'
    %p.help-block
      %a{:href => '#', :id => 'avatar_type'}use URL
    - if error_on(@user, :avatar)
      %span.help-inline
        = errors_for(@user, :avatar)
