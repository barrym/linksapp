!!!
%html
  %head>
    %title> Linksapp
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          = link_to "linksapp", '/', :class => 'brand'
          - if user_signed_in?
            %ul.nav
              %li
                %a{:href => '/#'} home
              %li
                = link_to 'links', '/#links'
              %li
                = link_to 'sources', '/#sources'
            %p.pull-right
              = image_tag 'working.gif', :id => 'working', :style => 'display:none;'
              Logged in as #{current_user.nickname}
              = link_to "sign out", destroy_user_session_path, :method => :delete
    .container
      .content
        #alerts
          - if flash[:notice]
            .alert-message.info
              = flash[:notice]
          - if flash[:error]
            .alert-message.error
              = flash[:error]
        =yield
        #main
